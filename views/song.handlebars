            </div>
        </div>
        <div class="container">
            <div id="search-results" class="row">
                <!--song display card-->
                <div class="cust-card-dark col-6">
                    <div class="card-body">
                        <h2>{{song.title}}</h2>
                        <a id="play" style="color: #fff;" href="" >    
                            <div class="dash-icon">
                                <i class="fas fa-play-circle"></i>
                            </div>
                        </a>
                    </div>
                </div>                             
            </div>   
            <p>{{song.description}}</p>   
            <div id="search-results" class="row">
                <!--community posts card-->
                <div class="cust-card-dark col-12">
                <h4 style="padding-top: 15px;" class="card-title">Community Posts</h4>
                    <div class="card-body comments">                        
                        <div  style="text-align: right;">
                            <div class="post-body">
                                {{#each song.comments as |comment|}}
                                <p class="card-text">{{comment.comment}}<span style="font-weight: bold; padding:5px">- {{comment.user_name}}</span></p>
                                {{/each}}  
                            </div>
                        </div>    
                    </div>
                </div>                
            </div>
            
            <div class="flex-row">
                <textarea class="form-control textarea" id="comment-content" data-id={{song.id}} placeholder="Leave a comment..."></textarea>
            </div>
            <div class="mt-2 text-right">
                <button class="btn btn-danger btn-sm shadow-none" id="commentBtn" type="button">Submit</button>
            </div>
            
        </div>
    </main>
